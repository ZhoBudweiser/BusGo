.progress-ring {
  position: relative;
  width: 180rpx;
  height: 180rpx;
}

#canvas {
  width: 100%;
  height: 100%;
}

.progress-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-65%, -70%);
}

.progress-text-num {
  font-size: 36rpx;
}

.progress-text-word {
  font-size: 28rpx;
  margin-left: 3rpx;
}