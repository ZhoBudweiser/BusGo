<view class="container">
  <notice
    class="notice"
    show="{{noticeShow}}"
    type="active"
    mode="closable"
    onClick="actionClick"
    onClickLeft="linkActionClick"
  >
    班车调整|关于调整元旦期间班车运行的通知
  </notice>
  <schoolmap
    class="schoolmap"
    longitude="{{longitude}}"
    latitude="{{latitude}}"
    stops="{{stops}}"
    onSelectedStop="onSelectedStop"
    onSetTimeCost="onSetTimeCost"
    selectedStop="{{selectedStop}}"
    lines="{{busLines}}"
  >
  </schoolmap>
  <movable class="previa" onStateChange="onStateChange">
    <view id="content">
      <searchbar></searchbar>
      <tabs activeTab={{activeIndex}} onActive="onActive"></tabs>
      <overview
        activeTab={{activeIndex}}
        onActive="onActive"
        state={{currentState}}
        busLines={{busLines}}
        nearest_stop_id={{selectedStop}}
        nearest_stop_name={{selectedStopName}}
        time_left_human_walk={{timeCost}}
      >
      </overview>
    </view>
  </movable>
</view>